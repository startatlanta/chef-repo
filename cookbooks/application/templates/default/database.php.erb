<?php
class DATABASE_CONFIG {

  <% case @database['adapter'] %>
  <% when 'mysql' %>
  var $default = array(
    'driver' => 'mysql',
    'persistent' => false,
    'host' => '<%= @host %>',
    'login' => '<%= @database['username'] %>',
    'password' => '<%= @database['password'] %>',
    'database' => '<%= @database['database'] %>',
    'prefix' => ''
  );
  <% when 'mongodb' %>
  public $mongo = array(
    'driver' => 'mongodb.mongodbSource',
    'database' => '<%= @database['database'] %>',
    'host' => '<%= @host %>',
    'port' => <%= @database['port'] %>
  );
  <% end %>
}
