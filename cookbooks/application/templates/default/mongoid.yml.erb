defaults: &defaults
  autocreate_indexes: false
  allow_dynamic_fields: true
  include_root_in_json: false
  parameterize_keys: true
  persist_in_safe_mode: false
  raise_not_found_error: true
  reconnect_time: 3

<%- @databases.each do |env, db| %>
<%= env %>:
  <<: *defaults
  host: <%= @host %>
  port: <%= db['port'] %>
  database: <%= db['database'] %>

<%- end %>